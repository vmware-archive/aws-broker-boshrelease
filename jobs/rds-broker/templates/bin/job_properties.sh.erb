#!/usr/bin/env bash

#
# RDS Broker properties
#

# Directory to store the RDS Broker configuration files
export RDS_BROKER_CONF_DIR=${JOB_DIR}/config

# Directory to store the RDS Broker log files
export RDS_BROKER_LOG_DIR=${LOG_DIR}

# Directory to store the RDS Broker process IDs
export RDS_BROKER_PID_DIR=${RUN_DIR}

# Directory to store the RDS Broker data files
export RDS_BROKER_STORE_DIR=${STORE_DIR}

# Directory to store the RDS Broker temp files
export RDS_BROKER_TMP_DIR=${TMP_DIR}

# Broker Listen Port
export RDS_BROKER_PORT="<%= p('rds-broker.port') %>"

# AWS Access Key ID
export AWS_ACCESS_KEY_ID="<%= p('rds-broker.aws_access_key_id') %>"

# AWS Secret Access Key
export AWS_SECRET_ACCESS_KEY="<%= p('rds-broker.aws_secret_access_key') %>"

#
# Route Registrar properties
#

# Directory to store the Route Registrar configuration files
export ROUTE_REGISTRAR_CONF_DIR=${JOB_DIR}/config

# Directory to store the Route Registrar log files
export ROUTE_REGISTRAR_LOG_DIR=${LOG_DIR}

# Directory to store the Route Registrar process IDs
export ROUTE_REGISTRAR_PID_DIR=${RUN_DIR}

# Directory to store the Route Registrar data files
export ROUTE_REGISTRAR_STORE_DIR=${STORE_DIR}

# Directory to store the Route Registrar temp files
export ROUTE_REGISTRAR_TMP_DIR=${TMP_DIR}
